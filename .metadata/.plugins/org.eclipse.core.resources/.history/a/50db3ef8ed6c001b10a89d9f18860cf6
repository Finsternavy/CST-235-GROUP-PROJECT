package beans;

import java.time.LocalDateTime;
import java.util.ArrayList;

public class CustomDate {
	
	public CustomDate() {
		now = LocalDateTime.now();
		this.year = now.getYear();
		this.month = now.getMonthValue();
		this.day = now.getDayOfMonth();
	}
	
	public CustomDate(int year, int month, int day) {
		this.year = year;
		this.month = month;
		this.day = day;
		
	}
	
	public CustomDate(String date) {
		
		dateSplit = date.split("");
		
		this.dateStringToValues(dateSplit);
		
		
		
	}
	
	private int year;
	private int month;
	private int day;
	
	String [] dateSplit;
	
	LocalDateTime now;
	
	public void dateStringToValues(String [] data) {
		
		StringBuilder year = new StringBuilder();
		StringBuilder month = new StringBuilder();
		StringBuilder day = new StringBuilder();
		
		for(int i = 0; i < 4; i++) {
			
			year.append(data[i]);
	
		}
		
		for(int i = 5; i < 7; i++) {
			
			month.append(data[i]);
			
		}
		
		for(int i = 8; i < data.length; i++) {
			
			day.append(data[i]);
			
		}
		
		this.year = Integer.parseInt(year.toString());
		this.month = Integer.parseInt(month.toString());
		this.day = Integer.parseInt(day.toString());
		
		
	}

	public int getYear() {
		return year;
	}

	public void setYear(int year) {
		this.year = year;
	}

	public int getMonth() {
		return month;
	}

	public void setMonth(int month) {
		this.month = month;
	}

	public int getDay() {
		return day;
	}

	public void setDay(int day) {
		this.day = day;
	}

	public LocalDateTime getNow() {
		return now;
	}

	public void setNow(LocalDateTime now) {
		this.now = now;
	}
	
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		sb.append(this.getYear() + ", ");
		sb.append(this.getMonth() + ", ");
		sb.append(this.getDay() + "\n");
		return sb.toString();
	}

}
